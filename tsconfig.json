{
  "compilerOptions": {
    "jsx": "react",
    "target": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "*": ["app/javascript/*"]
    }
  },
  "include": [
    "app/javascript/mastodon",
    "app/javascript/flavours/glitch",
    "app/javascript/packs"
  ]
}
